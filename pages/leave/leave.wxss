/* pages/leave/leave.wxss */
page {
  background-color: #ffffff;
}

.formBox {
  width: 100%;
  height: 100%
}

.title {
  font-size: 60rpx;
  font-weight: bolder;
  margin-left: 30rpx;
}

.box1 {
  margin: 50rpx;
}

.box1 text {
  padding: 10rpx;
  margin-top: 10rpx;
}

.box1 input {
  width: 90%;
  border-bottom: 3rpx solid #efefef;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.box2 {
  width: 90%;
  border-bottom: 1rpx solid #efefef;
  padding-bottom: 20rpx;
  margin: 20rpx;
}

.box2 radio {
  padding-right: 40rpx;
}


.leaveTime {
  margin-bottom: 10rpx;

  height: 139rpx;
  display: block;
  box-sizing: border-box;
  width: 586rpx;
}

.leaveTime view {
  width: 652rpx;
  
  display: block;
  box-sizing: border-box;
  margin-top: 10rpx;

  display: block;

  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #efefef;

  
  height: 68rpx;
  
  
}

.returnTime {
  height: 111rpx;
  display: block;
  box-sizing: border-box;
}

.returnTime view {
  width: 610rpx;
  height: 71rpx;
  display: block;
  box-sizing: border-box;
  margin-top: 10rpx;

  display: block;
  padding-bottom: 30rpx;

  border-bottom: 1rpx solid #efefef;


}

.contact {
  margin-top: 30rpx;
}






.reasonTtile {
  width: 150rpx;
  height: 100rpx;
  font-size: 28rpx;
  float: left;
  line-height: 100rpx;
  font-size: medium;
}

.errmsg {
  width: 400rpx;
  height: 100rpx;
  font-size: 24rpx;
  float: left;
  line-height: 100rpx;
  color: red
}

.reasonText {
  width: 710rpx;
  height: 200rpx;
  margin: 0 20rpx;
  clear: both
}

.reasonText textarea {
  width: 670rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #808080;
  height: 200rpx
}

.textCount {
  width: 200rpx;
  height: 100rpx;
  float: right;
  margin-right: 20rpx;
}

.textCount text {
  float: right;
  line-height: 100rpx;
  font-size: 32rpx;
}

.submitBtn {
  width: 710rpx;
  height: 80rpx;
  margin: 40rpx auto;
  background-color: #66ccff;
  border-radius: 20rpx;
  line-height: 40rpx;
  color: white;
  font-size: 28rpx;
}


.button1 {
  width: 80%;
  margin-top: 40rpx;
  background-color: #28C76F;
  color: white;
}

.leaveReason {
  width: 652rpx;
  height: 256rpx;
  display: block;
  box-sizing: border-box;
  left: 0rpx;
  top: 0rpx
}