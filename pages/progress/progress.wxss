/* pages/progress/progress.wxss */
page{
  background-color: #efefef;
}
.nav{
	display: flex;
	text-align: center;
	font-size: 32rpx;
	margin-bottom: 1%;
	box-shadow:1rpx 2rpx 1rpx 1rpx #efefef;
  border-radius: 0 0 16rpx 16rpx;
  line-height: 80rpx;
  background-color: #fff;
  }
  .left{
	flex: 1;
  font-weight: bold;
  border-radius: 0 0 32rpx 32rpx;
  
  }
  .right{
	flex: 1;
  font-weight: bold;
  border-radius: 0 0 32rpx 32rpx;
  
  }
  .select{
	font-weight: bold;
  background-color: #3cba92;
  height: 90rpx;
  border-radius: 0 0 32rpx 32rpx;
  color:#fff;
  }
 
  .noCheckList {
    width: 710rpx;
    background-color: white;
    border-radius: 20rpx;
    margin: 20rpx auto;
    padding-bottom: 40rpx;
  }
  .noTitleBox {
    width: 670rpx;
    margin: 0 auto;
    height: 100rpx;
    border-top: 1px solid #f8f3f3;
    line-height: 90rpx;
  }
  .noDetailBox {
    width: 670rpx;
    margin: 0 auto;
    min-height: 50rpx;
  }
  
  .noDetail {
    line-height: 50rpx;
    font-size: 28rpx;
    text-indent: 2em;
  }

  .userBox {
    width: 670rpx;
    height: 100rpx;
    margin: 0 auto;
  }
  
  .user {
    height: 100rpx;
    line-height: 100rpx;
    float: left;
    font-size: 28rpx;
  }

  .academy {
    height: 100rpx;
    line-height: 100rpx;
    float: right;
    font-size: 28rpx;
  }
  

  .accept
  {
    font-weight: bolder;
    color: green;
    font-size: large;
  }
  .reject
  {
    font-weight: bolder;
    color:  rgb(218, 218, 63);
    font-size: large;
  }
  
  