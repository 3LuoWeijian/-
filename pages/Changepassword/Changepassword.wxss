.item{
  flex-grow:1;
  height: 30%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 96%;
  padding: 0 2%;
}

.login-item{
  width: 90%;
  margin-top: 70rpx;
  border-bottom: 1px solid #eee;
  flex-grow:1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

.bottom{
   border-bottom: 0rpx;
   margin-top: 30rpx;
   
}
.bottom button
{
	background-color: aquamarine;
	color: #FFF;
	border-radius: 16rpx;
}

.login-item-info{
  font-size: 30rpx;
  color: #888;
   padding-bottom: 20rpx;
}

.login-pwd{
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;

}

.login-pwd text{
  height: 100%;
  font-size: 30rpx;
  color: #888;
  display: flex;

}
.login-btn{
  width: 390rpx;
  color:white;
  background-color: aquamarine;
  border-radius: 32rpx;
  font-size: 28rpx;

}

.bottom button:hover{
  width: 360rpx;
  color:#efefef;
  border-radius: 32rpx;
}


.nav{
	display: flex;
	text-align: center;
	font-size: 32rpx;
	margin-bottom: 1%;
	box-shadow:1rpx 2rpx 1rpx 1rpx #efefef;
	padding-bottom: 30rpx;
	border-radius: 0 0 32rpx 32rpx;
  }
  .left{
	flex: 1;
	font-weight: bold;
  }
  .right{
	flex: 1;
	font-weight: bold;
  }
  .select{
	font-weight: bold;
	color: aquamarine;
  }
  .select text{
	padding-bottom: 5rpx;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
	border-bottom: 5rpx solid aquamarine;
  }
  


  

