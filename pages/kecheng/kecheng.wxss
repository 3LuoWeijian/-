/* pages/kecheng/kecheng.wxss */
.formBox {
  width: 100%;
  height: 100%
}

.title {
  font-size: 60rpx;
  font-weight: bolder;
  margin-left: 30rpx;
}

.box1
{
  margin: 50rpx;
}
.box1 text
{
  padding: 10rpx;
  margin-top: 10rpx;
}

.box3 view
{
  width: 90%;
  border-bottom: 3rpx solid #efefef;
  padding: 10rpx;
  margin-bottom: 20rpx;
  color: grey;
}
.box2 {
  width: 90%;
  border-bottom: 1rpx solid #efefef;
  padding-bottom: 20rpx;
  margin: 20rpx;
}
.box2 radio {
  padding-right: 40rpx;
}
.leaveTime {
  margin-bottom: 10rpx;

  height: 139rpx;
  display: block;
  box-sizing: border-box;
  width: 586rpx;
}

.leaveTime view {
  width: 652rpx;

  display: block;
  box-sizing: border-box;
  margin-top: 10rpx;

  display: block;

  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #efefef;


  height: 68rpx;


}
.reasonTtile {
  float: left;
  line-height: 100rpx;
  font-size: medium;
  width: 172rpx;
  height: 99rpx;
  display: block;
  box-sizing: border-box
}

.errmsg {
 
  font-size: 24rpx;
  float: left;
  line-height: 100rpx;
  color: red;
  width: 383rpx;
  height: 99rpx;
  display: block;
  box-sizing: border-box
}

.reasonText {
  position: relative;
  width: 710rpx;
  height: 200rpx;
  margin: 0 20rpx;
  clear: both
}

.reasonText textarea {
  width: 670rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #808080;
  height: 200rpx;
  top: -100rpx
}

.textCount {
  width: 200rpx;
  height: 100rpx;
  float: right;
  margin-right: 20rpx;
}

.textCount text {
  float: right;
  line-height: 100rpx;
  font-size: 32rpx;
}

.submitBtn {
  width: 710rpx;
  height: 80rpx;
  margin: 40rpx auto;
  background-color: #66ccff;
  border-radius: 20rpx;
  line-height: 40rpx;
  color: white;
  font-size: 28rpx;
}
