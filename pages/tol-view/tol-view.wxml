<!--pages/tol-view/tol-view.wxml-->
<progress percent="80" active-mode="forwards" show-info="true" stroke-width="20" active="true">在校人数</progress>
<button bindtap="info">全校人数</button>
<button>全校打卡情况</button>

<view class="con">
    <text class="title">上传照片</text>
    <view class="img_list">
        <block wx:for="{{imgList}}" wx:key="index">
          <view class="item_img">
            <image src="{{item}}" class="img_item" mode="aspectFill" catchtap="previewImg"  data-src="{{item}}" ></image>
            <image src="/image/daka.png" class="close" catchtap="deleteUpload" data-index="{{index}} "></image>
          </view>
        </block>
        <view class="item_img1 flex-column" catchtap="chooseImg"  wx:if="{{show}}">
          <image src="/image/fankui.png" class="add_img" mode="aspectFill"></image>
          <text>{{imgList.length}}/{{maxPhoto}}</text>
    </view>
    </view>
 
</view>　