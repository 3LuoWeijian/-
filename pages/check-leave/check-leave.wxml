<!--pages/leavecheck/leavecheck.wxml-->
<import src="../../templates/checkCard/checkCard.wxml"></import>



<view class="box" wx:for="{{leaveList}}" wx:key="index" wx:for-index="childindex">
  <!-- <block wx:if="{{!item.pass_jwc&&(item.pass_fdy)}}"> -->
    <view class="stu-info">
      <view class="banji">{{item.class}}</view>
      <view class="xingming">{{item.stu_name}}</view>
      <view class="xueyuan">{{item.academy}}</view>
    </view>
    <view class="leave-info">
      <view class="leave-kind">{{item.leaveClass}}</view>
      <text class="leave-date">{{item.leaveDate}} 至 {{item.returnDate}}</text>
      <view class="high-risk" wx:if="{{item.riskRegion}}"> 目的地为中高风险地区 </view>
      <view class="high-risk" wx:else> 目的地为低风险地区 </view>
      <view class="leave-reason">{{item.leaveReason}}</view>
    </view>
    <view class="box1 ">
      <view class="item_img" wx:for="{{item.newImgList}}" wx:key="index">
        <image src="{{item}}" class="img_item" mode="aspectFill" data-src="{{item}}" catchtap="previewImg" data-index="{{childindex}}"></image>
      </view>
      <view class="yes-or-not" style="width: 732rpx; height: 106rpx; display: block; box-sizing: border-box"><button bindtap="rejectBtn" data-index="{{childindex}}" class="not" style="position: relative; left: -162rpx; top: 5rpx; width: 195rpx; height: 83rpx; display: block; box-sizing: border-box">驳回</button> <button bindtap="passBtn" data-index="{{childindex}}" class="yes" style="position: relative; left: 155rpx; top: -78rpx; width: 195rpx; height: 83rpx; display: block; box-sizing: border-box">通过</button></view>
    </view>
  <!-- </block> -->


</view>


